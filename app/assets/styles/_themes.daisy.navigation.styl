// ---------------------------------
// :: Themes - Daisy - Navigation
// ---------------------------------

html, body
  height: 100%

.daisy
  &-main
    background-color: $grey10
    height: auto !important
    min-height: 100%
    margin-left: 15rem

  &-sidebar
    background-color: $grey10;
    border-right: 1px solid $grey20
    height: 100%
    padding: 2rem 0
    position: fixed
    top: 0
    width: 15rem

  &-nav
    &__version
      margin-top: 1.5rem
      margin-bottom: 0.75rem
      padding-left: 2rem
      padding-right: 2rem

    &__title
      color: $grey80
      font-weight: 600
      letter-spacing: .0625rem
      margin-top: 1.5rem
      margin-bottom: .75rem
      padding: 0 2rem
      text-transform: uppercase

      set-font-size($p)

    &__link
      display: block
      font-size: .875rem
      padding: 1rem 1rem 1rem 2rem
      width: 100%

      &:hover
        background: $grey20
        color: $grey90

  &-card
    background-color: $white
    border-bottom: 1px solid $grey20
    padding: 1.5rem 3rem

  &-cards
    margin-top: -12rem
    position: relative
    z-index: 1 /* remove this */
