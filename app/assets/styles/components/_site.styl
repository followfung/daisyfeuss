html, body
  height: 100%

.site-main
  background-color: $grey10
  height: auto !important
  min-height: 100%
  margin-left: 15rem

.site-sidebar
  border-right: 1px solid #eee
  height: 100%
  padding: 2rem 0
  position: fixed
  top: 0
  width: 15rem

.site-nav__link
  display: block
  font-size: .875rem
  padding: 1rem 1rem 1rem 2rem
  width: 100%

  &:hover
    background: whitesmoke

.site-masthead
  background-color: $teal50
  color: $white
  padding: 2rem

  &__title
    font-weight: 600
