/* Root em (rem) is assumed to be 16px */

/* TOOLTIP */

.dijitTooltip
  /* from original dgrid css */
  position: absolute
  z-index: 2000
  display: block
  left: 0
  top: -10000px
  overflow: visible

// Tooltip Arrow

.dijitTooltipBelow
  padding-top: 1rem


  &:before
    content: ""
    width: 0
    height: 0
    border-style: solid
    border-width: 0 9px 9px 9px
    border-color: transparent transparent #a2aaad transparent
    position: absolute
    left: 5px
    /* 6px */
    top: 8px
    /* 8px */

  &:after
    content: ""
    width: 0
    height: 0
    border-style: solid
    border-width: 0 8px 8px 8px
    border-color: transparent transparent #fff transparent
    position: absolute
    left: 0.375rem
    /* 6px */
    top: 9px
    /* 8px */

.dijitTooltipContainer
  background-color: $white
  border: 1px solid $grey
  padding: 6px 8px
  font-size: 0.75rem /* 12px */
  border-radius: $border-radius
  box-shadow: 0 1px 6px rgba($black, .25)
  color: $black
  transition-delay: .2s
  transition-duration: 0.4s
  transition-property: opacity, transform
  transition-timing-function: cubic-bezier(0.77, 0, 0.175, 1)
