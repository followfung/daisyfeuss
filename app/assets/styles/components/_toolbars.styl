/* ACTIONS TOOLBAR */

.actions-toolbar
  background: $white
  font-family: $open-sans /* TEMPORARY */
  font-size: 13px
  overflow: hidden
  padding: .25rem 0

  &__buttons
    height: $toolbar-height
    float: left
    margin-left: 1rem /* for separator */
    position: relative

    &:first-child:before
      /* first instance of this doesn't have a separator */
      content: none

    &:before
      /* this is the separator */
      background-color: #2d2926
      bottom: 2px
      content: ""
      left: -0.5rem
      top: 4px
      position: absolute
      width: 1px

  &__button
    cursor: pointer
    display: inline-block
    float: left /* TEMPORARY */
    height: $toolbar-height
    padding: 1px 5px;
    position: relative
    transition-duration: 0.4s
    transition-property: background-color
    transition-timing-function: cubic-bezier(0.77, 0, 0.175, 1)
    min-width: 24px /* for icon-only buttons */

    &:hover
      background-color: #eee

    &-label
      color: $black
      display: inline-block
      height: $toolbar-height
      line-height: $toolbar-height
      padding-left: 24px
      padding-right: 3px

  &__icon
    left: 6px
    position: absolute
    top: 5px
    width: 16px

    &--refresh
      top: 6px
      width: 18px

    &--filter
      top: 5px
      width: 16px

    &--view
      top: 7px
      width: 18px

    &--add
      top: 6px
      width: 14px

    &--more
      top: 10px
      width: 21px
