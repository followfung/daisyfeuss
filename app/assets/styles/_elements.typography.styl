// ---------------------------------
// :: Elements - Typography
// ---------------------------------

$text-colour                ?= $grey90
$link-colour                ?= $dark-blue

$text-font                  ?= $open-sans

$h1                         ?= $h1-font-size
$h2                         ?= $h2-font-size
$h3                         ?= $h3-font-size
$h4                         ?= $h4-font-size
$h5                         ?= $h5-font-size
$h6                         ?= $h6-font-size
$p                          ?= $p-font-size

// ---------------------------------

::selection
  background-color: #faffbd // TODO: Make this a variable

body
  -webkit-font-smoothing: antialiased
  -webkit-text-size-adjust: none
  color: $text-colour
  font-family: $text-font
  font-size: $base-font-size
  line-height: $base-line-height

h1, .h1
  +set-font-size($h1)

h2, .h2
  +set-font-size($h2)

h3, .h3
  +set-font-size($h3)

h4, .h4
  +set-font-size($h4)

h5, .h5
  +set-font-size($h5)

h6, .h6
  +set-font-size($h6)

a
  color: $link-colour
  text-decoration: none

b, strong
  font-weight: $strong-font-weight

p
  +set-font-size($p)
