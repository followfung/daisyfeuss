.daisy
  &-masthead
    background: linear-gradient(to right, $purple80, $dark-blue)
    color: $white
    overflow: hidden
    padding: 2rem 3rem
    position: relative

    &--intro
      padding-top: 5rem
      padding-bottom: 15rem /* to accomodate for triangle */

      &:before
        /* to create triangle using only CSS */
        bottom: 0
        border-style: solid
        border-width: 0 0 15rem 100rem
        border-color: transparent transparent $grey10 transparent
        content: ""
        height: 0
        right: 0
        position: absolute
        width: 0

    &__title
      font-weight: $semibold

    &__actions
      remove-bullets()

    &__action
      display: inline-block
      padding-right: .5rem
