// ---------------------------------

.daisy
  &-masthead
    border-top: 3px solid #333
    margin-top: 3rem
    margin-bottom: 3rem
    overflow: hidden
    position: relative

    &--intro
      padding-top: 5rem
      padding-bottom: 15rem /* to accomodate for triangle */

      &:before
        /* to create triangle using only CSS */
        bottom: 0
        border-style: solid
        border-width: 0 0 15rem 100rem
        border-color: transparent transparent $grey10 transparent
        content: ""
        height: 0
        right: 0
        position: absolute
        width: 0

    &__heading
      margin-bottom: 2rem

    &__title
      font-weight: $semibold
      margin-top: .5rem
      margin-bottom: .5rem

    &__sub-title
      margin-top: 0

    &__actions
      remove-bullets()

    &__action
      display: inline-block
      padding-right: .5rem
