// Font Size Converter
set-font-size(value) {
    font-size: value

    if (value is inherit) {
        /* do nothing, "inherit" has no unit */
    }
    else if (value is $h1) {
        font-size: remify($h1-font-size)
        font-weight: $light
        letter-spacing: -0.025em
        line-height: 1.25
    }
    else if (value is $h2) {
        font-size: remify($h2-font-size)
        font-weight: $light
    }
    else if (value is $h3) {
        font-size: remify($h3-font-size)
        font-weight: $normal
    }
    else if (value is $h4) {
        font-size: remify($h4-font-size)
        font-weight: $normal
    }
    else if (value is $h5) {
        font-size: remify($h5-font-size)
        font-weight: $normal
    }
    else if (value is $h6) {
        font-size: remify($h4-font-size)
        font-weight: $bold
    } else {
        font-size: remify(value)
    }
}

// Rem Converter
remify(value) {
    u = unit(value)

    if (u is 'px') {
        return unit(value/16, 'rem')
    } else {
        return unit(value, u)
    }
}

