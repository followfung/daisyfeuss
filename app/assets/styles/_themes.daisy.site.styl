    &20
      assign-swatch-colour($green20)

    &40
      assign-swatch-colour($green40)

    &50
      assign-swatch-colour($green50)

    &60
      assign-swatch-colour($green60)

    &80
      assign-swatch-colour($green80)

  &--orange
    assign-swatch-colour($orange50)

    &20
      assign-swatch-colour($orange20)

    &40
      assign-swatch-colour($orange40)

    &50
      assign-swatch-colour($orange50)

    &60
      assign-swatch-colour($orange60)

    &80
      assign-swatch-colour($orange80)

  &--red
    assign-swatch-colour($red50)

    &20
      assign-swatch-colour($red20)

    &40
