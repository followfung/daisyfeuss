  &--purple
    assign-swatch-colour($purple50)

    &20
      assign-swatch-colour($purple20)

    &40
      assign-swatch-colour($purple40)

    &50
      assign-swatch-colour($purple50)

    &60
      assign-swatch-colour($purple60)

    &80
      assign-swatch-colour($purple80)

  &--gold
    assign-swatch-colour($gold50)

    &20
      assign-swatch-colour($gold20)

    &40
      assign-swatch-colour($gold40)

    &50
      assign-swatch-colour($gold50)

    &60
      assign-swatch-colour($gold60)

    &80
      assign-swatch-colour($gold80)

  &__label
    position: absolute;

    &--hue
      font-size: $h4-font-size
      left: .75rem
      top: .75rem

    &--saturation
      bottom: .75rem
      font-weight: $normal
      left: .75rem
